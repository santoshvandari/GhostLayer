{
  "manifest_version": 3,
  "name": "GhostLayer: AI Privacy & Burner Identity",
  "short_name": "GhostLayer",
  "author": "Santosh Bhandari",
  "version": "1.0.0",
  "description": "Mask your fingerprint, generate burner emails, and poison tracker data.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "GhostLayer Settings"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webRequest",
    "alarms"
  ],
  "host_permissions": [
    "https://*.1secmail.com/*",
    "https://1secmail.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{9e9432f8-73c9-4a22-a161-94d432f873c9}",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injected.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}